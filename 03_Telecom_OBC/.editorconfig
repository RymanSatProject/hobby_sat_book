# EditorConfig: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C, C++
[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4

# Shell Script
[*.{sh,bash}]
indent_style = space
indent_size = 4
